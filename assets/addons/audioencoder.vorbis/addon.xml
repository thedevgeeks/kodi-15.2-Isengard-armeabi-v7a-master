<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audioencoder.vorbis"
  version="1.0.0"
  name="Vorbis Audio Encoder"
  provider-name="spiff">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="xbmc.audioencoder" version="1.0.0"/>
  </requires>
  <extension
    point="xbmc.audioencoder"
    extension=".ogg"
    library_linux="audioencoder.vorbis.so"
    library_android="libaudioencoder.vorbis.so"
    library_osx="audioencoder.vorbis.dylib"
    library_windx="audioencoder.vorbis.dll"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Vorbis Audio Encoder</summary>
    <description lang="en">Vorbis Audio Encoder</description>
    <platform>all</platform>
  </extension>
</addon>
