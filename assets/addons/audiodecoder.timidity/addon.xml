<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.timidity"
  version="1.0.1"
  name="Timidity Audio Decoder"
  provider-name="spiff">
  <requires>
    <import addon="kodi.audiodecoder" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    name="mid"
    extension=".mid|.kar"
    library_linux="audiodecoder.timidity.so"
    library_freebsd="audiodecoder.timidity.so"
    library_osx="audiodecoder.timidity.dylib"
    library_windx="audiodecoder.timidity.dll"
    library_android="libaudiodecoder.timidity.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Timidity Audio Decoder</summary>
    <description lang="en">Timidity MIDI Audio Decoder</description>
    <platform>all</platform>
  </extension>
</addon>
