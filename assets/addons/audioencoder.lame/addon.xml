<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audioencoder.lame"
  version="1.0.0"
  name="Lame MP3 Audio Encoder"
  provider-name="spiff">
  <requires>
    <import addon="xbmc.audioencoder" version="1.0.0"/>
  </requires>
  <extension
    point="xbmc.audioencoder"
    extension=".mp3"
    library_linux="audioencoder.lame.so"
    library_android="libaudioencoder.lame.so"
    library_osx="audioencoder.lame.dylib"
    library_windx="audioencoder.lame.dll"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Lame MP3 Audio Encoder</summary>
    <description lang="en">Lame MP3 Audio Encoder</description>
    <platform>all</platform>
  </extension>
</addon>
