<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.sidplay"
  version="1.0.1"
  name="Sidplay Audio Decoder"
  provider-name="spiff">
  <requires>
    <import addon="kodi.audiodecoder" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    name="sid"
    extension=".sid|.sidstream"
    tracks="true"
    library_linux="audiodecoder.sidplay.so"
    library_osx="audiodecoder.sidplay.dylib"
    library_freebsd="audiodecoder.sidplay.so"
    library_windx="audiodecoder.sidplay.dll"
    library_android="libaudiodecoder.sidplay.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Sidplay Audio Decoder</summary>
    <description lang="en">Sidplay Audio Decoder</description>
    <platform>all</platform>
  </extension>
</addon>
